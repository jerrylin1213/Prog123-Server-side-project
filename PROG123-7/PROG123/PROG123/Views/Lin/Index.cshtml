
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Lin.cshtml";
}
@model PROG123.Models.LogInCredentialsModel
<h1 style="margin-left:2cm">Index</h1>

<form id="loginForm" asp-action="LogIn" method="post" style="margin-left:2cm">
    <div class="inputwrap">
        <label style="font-size: 20px">Name:</label>
        <input asp-for="UserName" class="roundCorners" required size="15" onclick="value='JerryLin'" />
    </div>
    <div class="inputwrap">
        <label style="font-size: 20px">Password:</label>
        <input asp-for="UserPassword" class="roundCorners" required size="15" onclick="value='abc123'" />
    </div>
    <div style="margin:0.5cm" class="inputwrap">
        <label><button type="submit">Log In</button></label>
        <label style="color:red;">@ViewBag.LoginMessage</label>
    </div>
</form>